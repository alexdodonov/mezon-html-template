{
	"name": "mezon/html-template",
	"description": "Small html-template script",
	"license": "MIT",
	"authors": [
		{
			"name": "Dodonov Alexey",
			"email": "alexey@dodonov.pro",
			"homepage": "http://gdzone.ru",
			"role": "Founder"
		}
	],
	"require-dev": {
		"phpunit/phpunit": "^8.5",
		"vimeo/psalm": "^4.2",
		"infection/infection": "^0.21.5"
	},
	"require": {
		"php": ">=7.2.0",
		"mezon/template-engine" : "1.0.*",
		"mezon/conf" : "1.2.*"
	},
	"support": {
		"email": "alexey@dodonov.pro",
		"issues": "https://github.com/alexdodonov/mezon-html-template/issues",
		"source": "https://github.com/alexdodonov/mezon-html-template"
	},
	"minimum-stability": "dev",
	"homepage": "https://github.com/alexdodonov/mezon-html-template",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Mezon\\HtmlTemplate\\": "./Mezon/HtmlTemplate"
		}
	},
	"scripts": {
		"test": "php ./vendor/phpunit/phpunit/phpunit --order-by=random --testsuite all",
		"psalm": "php ./vendor/vimeo/psalm/psalm --show-info=true --no-cache",
		"infection": "php ./vendor/infection/infection/bin/infection --threads=4 --min-msi=75"
	}
}
